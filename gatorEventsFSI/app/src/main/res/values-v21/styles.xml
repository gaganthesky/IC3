<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">#FFB74D</item>
        <item name="colorControlNormal">#4221A6</item>
        <item name="colorAccent">#4221A6</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
    </style>

    <style name="EventsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <item name="colorPrimary">@color/ufl_orange</item>
        <item name="colorPrimaryDark">@color/ufl_orange_dark</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#4221A6</item>
    </style>

    <style name="CustomLinePageIndicator">
        <item name="strokeWidth">4dp</item>
        <item name="lineWidth">30dp</item>
        <item name="unselectedColor">#FFAAAAAA</item>
        <item name="selectedColor">#FF4221A6</item>
    </style>

    <style name="AppThemeNoTitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.TranslucentActionBar" parent="AppTheme">
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
    </style>

    <style name="Theme.TranslucentActionBar.ActionBar" />

    <style name="Theme.TranslucentActionBar.ActionBar.Overlay">
        <item name="android:actionBarStyle">@style/Widget.ActionBar.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!--<item name="android:background">@drawable/ab_background</item>-->
    </style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>

